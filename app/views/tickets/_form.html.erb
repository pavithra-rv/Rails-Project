    <%= form.text_field :phone_number, class:"form-control", placeholder:"Phone Number" %>
  </div>
<br>
  <div class:"mb-3">
    <%= form.text_field :age, class:"form-control", placeholder:"Age" %>
  </div>
<br>
  <div class:"mb-3">
    <%= form.number_field :no_of_tickets, class:"form-control", placeholder:"No Of Tickets " %>
  </div>
<br>
   <div class:"mb-3">
    <%= form.number_field :user_id, id: :ticket_user_id, class:"form-control", value:current_user.id, type: :hidden %>
